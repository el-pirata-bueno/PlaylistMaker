<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    style="@style/LayoutStyle"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_left_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_right_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_left_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06667" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_right_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93333" />

    <Button
        style="@style/ArrowBackStyle"
        android:id="@+id/arrow_back_player"
        android:layout_marginTop="@dimen/standard_padding"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintTop_toTopOf="parent"
        app:icon="@drawable/arrow_back"
        app:iconGravity="textStart"
        app:iconTint="?attr/colorOnSecondary"/>

    <ImageView
        android:id="@+id/track_cover_big"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="42dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/second_right_border"
        app:layout_constraintStart_toStartOf="@id/second_left_border"
        app:layout_constraintTop_toBottomOf="@id/arrow_back_player"
        app:srcCompat="@drawable/cover_placeholder_big" />

    <TextView
        android:id="@+id/track_name"
        style="@style/TrackTextStyle"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/text_size"
        android:maxLines="1"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/second_left_border"
        app:layout_constraintEnd_toEndOf="@id/second_right_border"
        app:layout_constraintTop_toBottomOf="@id/track_cover_big"
        tools:text="Track Name" />

    <TextView
        android:id="@+id/artist_name"
        tools:text="Artist Name"
        style="@style/TrackTextStyle"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/text_size_button"
        android:maxLines="1"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/second_left_border"
        app:layout_constraintEnd_toEndOf="@id/second_right_border"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        />

    <ImageButton
        android:id="@+id/button_add_to_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginStart="0dp"
        android:background="?attr/colorSecondary"
        android:src="@drawable/button_add_to_playlist"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        tools:text="Add to playlist" />

    <ImageButton
        android:id="@+id/button_added_to_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginStart="0dp"
        android:background="?attr/colorSecondary"
        android:src="@drawable/button_added_to_playlist"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        tools:text="Add to playlist" />

    <ImageButton
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/button_play"
        android:background="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintEnd_toStartOf="@id/first_right_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        />

    <ImageButton
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/button_pause"
        android:background="?attr/colorSecondary"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintEnd_toStartOf="@id/first_right_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        />

    <ImageButton
        android:id="@+id/button_add_to_favourites"
        tools:text="Add to favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:src="@drawable/button_add_to_favourites"
        android:background="?attr/colorSecondary"
        app:layout_constraintEnd_toStartOf="@id/second_right_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        />

    <ImageButton
        android:id="@+id/button_added_to_favourites"
        tools:text="Add to favourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:src="@drawable/button_added_to_favourites"
        android:background="?attr/colorSecondary"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/second_right_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        />

    <TextView
        android:id="@+id/current_track_time"
        tools:text="Current track time"
        style="@style/TrackTextStyle"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:textFontWeight="500"
        android:textSize="@dimen/text_size_button"
        android:gravity="center"
        android:layout_marginTop="132dp"
        android:text="@string/current_track_time_placeholder"
        app:layout_constraintStart_toEndOf="@id/second_left_border"
        app:layout_constraintEnd_toStartOf="@id/second_right_border"
        app:layout_constraintTop_toBottomOf="@id/artist_name"
        />

    <TextView
        android:id="@+id/length"
        style="@style/TrackTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:text="@string/length"
        android:textColor="@color/icon"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintBottom_toTopOf="@id/album"
        app:layout_constraintTop_toBottomOf="@id/current_track_time"        />

    <TextView
        android:id="@+id/track_length"
        style="@style/TrackTextStyleSecondary"
        tools:text="Track length"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/first_right_border"
        app:layout_constraintBottom_toTopOf="@id/album"
        />

    <TextView
        android:id="@+id/album"
        style="@style/TrackTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:text="@string/album"
        android:textColor="@color/icon"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintBottom_toTopOf="@id/year"
        />

    <TextView
        android:id="@+id/track_album"
        style="@style/TrackTextStyleSecondary"
        tools:text="Track album"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/first_right_border"
        app:layout_constraintBottom_toTopOf="@id/year"
        />

    <TextView
        android:id="@+id/year"
        style="@style/TrackTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:text="@string/year"
        android:textColor="@color/icon"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintBottom_toTopOf="@id/genre"
        />

    <TextView
        android:id="@+id/track_year"
        style="@style/TrackTextStyleSecondary"
        tools:text="Track year"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/first_right_border"
        app:layout_constraintBottom_toTopOf="@id/genre"
        />

    <TextView
        android:id="@+id/genre"
        style="@style/TrackTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:text="@string/genre"
        android:textColor="@color/icon"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintBottom_toTopOf="@id/country"
        />

    <TextView
        android:id="@+id/track_genre"
        style="@style/TrackTextStyleSecondary"
        tools:text="Track genre"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/first_right_border"
        app:layout_constraintBottom_toTopOf="@id/country"
        />

    <TextView
        android:id="@+id/country"
        style="@style/TrackTextStyleSecondary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:text="@string/country"
        android:layout_marginBottom="20dp"
        android:textColor="@color/icon"
        app:layout_constraintStart_toStartOf="@id/first_left_border"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/artist_country"
        style="@style/TrackTextStyleSecondary"
        tools:text="Artist country"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/track_string_height"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/first_right_border"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>