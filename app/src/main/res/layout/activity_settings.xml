<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginBottom="24dp"
        android:paddingStart="@dimen/standard_padding">

        <Button
            android:id="@+id/arrowBackButton"
            style="@style/ArrowBackStyle"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorOnSecondary" />

        <TextView
            style="@style/ToolbarTextStyle"
            android:paddingStart="48dp"
            android:text="@string/settings" />

    </FrameLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeSystemSwitcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:layout_gravity="start"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="@dimen/standard_padding"
        android:paddingEnd="0dp"
        android:text="@string/system_theme"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="@dimen/small_text_size"
        android:theme="@style/Switch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/themeAppSwitcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:layout_gravity="start"
        android:fontFamily="@font/ys_display_regular"
        android:paddingStart="@dimen/standard_padding"
        android:paddingEnd="0dp"
        android:text="@string/dark_theme"
        android:textColor="?attr/colorOnPrimary"
        android:textFontWeight="400"
        android:textSize="@dimen/small_text_size"
        android:theme="@style/Switch" />

    <Button
        android:id="@+id/shareButton"
        style="@style/ButtonStyle"
        android:text="@string/share"
        app:icon="@drawable/ic_share" />

    <Button
        android:id="@+id/helpButton"
        style="@style/ButtonStyle"
        android:text="@string/help"
        app:icon="@drawable/ic_support" />

    <Button
        android:id="@+id/agreementButton"
        style="@style/ButtonStyle"
        android:text="@string/agreement"
        app:icon="@drawable/arrow_forward" />

</LinearLayout>


