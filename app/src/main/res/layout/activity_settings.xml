<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <Button
            android:id="@+id/arrow_back"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/white"
            android:inset="0dp"
            android:layout_gravity="start|center_vertical"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconTint="@color/alternative_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:letterSpacing="0"
            android:paddingStart="48dp"
            android:text="@string/settings"
            android:textColor="@color/alternative_black"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            app:fontFamily="@font/ysdisplayregular"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:letterSpacing="0"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/dark_theme"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        app:fontFamily="@font/ysdisplayregular"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:paddingEnd="@dimen/right_padding"
        android:backgroundTint="@color/white"
        android:gravity="start|center_vertical"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/share"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        app:cornerRadius="0dp"
        app:fontFamily="@font/ysdisplayregular"
        app:icon="@drawable/share"
        app:iconGravity="end"
        app:iconTint="@color/icon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:paddingEnd="@dimen/right_padding"
        android:backgroundTint="@color/white"
        android:gravity="start|center_vertical"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/help"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        app:cornerRadius="0dp"
        app:fontFamily="@font/ysdisplayregular"
        app:icon="@drawable/support"
        app:iconGravity="end"
        app:iconTint="@color/icon" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_height"
        android:paddingEnd="@dimen/right_padding"
        android:backgroundTint="@color/white"
        android:gravity="start|center_vertical"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/agreement"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        app:cornerRadius="0dp"
        app:fontFamily="@font/ysdisplayregular"
        app:icon="@drawable/arrow_forward"
        app:iconGravity="end"
        app:iconTint="@color/icon" />


</LinearLayout>


