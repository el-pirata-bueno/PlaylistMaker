<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:orientation="vertical"
    android:paddingStart="@dimen/standard_padding"
    android:paddingEnd="15dp"
    android:paddingBottom="20dp"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginBottom="@dimen/standard_padding"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/inset_button"
        android:insetBottom="@dimen/inset_button"
        android:letterSpacing="0.04"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/alternative_black"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:cornerRadius="@dimen/corner_radius"
        app:fontFamily="@font/ysdisplayregular"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/alternative_black" />

    <Button
        android:id="@+id/media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/inset_button"
        android:insetBottom="@dimen/inset_button"
        android:letterSpacing="0.04"
        android:text="@string/media"
        android:textColor="@color/alternative_black"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:fontFamily="@font/ysdisplayregular"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/media"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/alternative_black"
        tools:ignore="ExtraText" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:insetTop="@dimen/inset_button"
        android:insetBottom="@dimen/inset_button"
        android:letterSpacing="0.04"
        android:text="@string/settings"
        android:textColor="@color/alternative_black"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:fontFamily="@font/ysdisplayregular"
        app:cornerRadius="@dimen/corner_radius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/alternative_black" />

</LinearLayout>



