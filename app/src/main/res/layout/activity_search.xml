<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tracks_view"
    android:orientation="vertical"
    style="@style/LayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingStart="@dimen/standard_padding"
        android:layout_marginBottom="8dp"
        tools:ignore="RtlSymmetry">

        <Button
            style="@style/ArrowBackStyle"
            android:id="@+id/arrow_back"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorOnSecondary"/>

        <TextView
            style="@style/ToolbarTextStyle"
            android:paddingStart="48dp"
            android:text="@string/search"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:paddingStart="@dimen/standard_padding"
        android:layout_marginBottom="24dp"
        android:paddingEnd="@dimen/standard_padding">

        <EditText
            style="@style/InputText"
            android:id="@+id/inputSearch"
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="@string/input_hint"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_baseline_close_24"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trackList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="86dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView android:id="@+id/placeholderImageNotFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:src="@drawable/nothing_found" />

            <ImageView android:id="@+id/placeholderImageSomethingWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:src="@drawable/something_went_wrong" />

            <TextView
                style="@style/ErrorTextStyle"
                android:id="@+id/placeholderMessage"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <Button
                style="@style/SimpleButtonStyle"
                android:id="@+id/updateButton"
                android:text="@string/update"
                android:visibility="gone"
                android:padding="0dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>



