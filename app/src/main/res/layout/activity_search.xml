<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchTracks"
    android:orientation="vertical"
    style="@style/LayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingStart="@dimen/standard_padding"
        android:layout_marginBottom="12dp"
        tools:ignore="RtlSymmetry">

        <Button
            style="@style/ArrowBackStyle"
            android:id="@+id/arrowBackButton"
            app:icon="@drawable/arrow_back"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorOnSecondary" />

        <TextView
            style="@style/ToolbarTextStyle"
            android:paddingStart="48dp"
            android:text="@string/search" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:paddingStart="@dimen/standard_padding"
        android:layout_marginBottom="24dp"
        android:paddingEnd="@dimen/standard_padding">

        <EditText
            style="@style/InputText"
            android:id="@+id/inputSearch"
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="8dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="@string/input_hint"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/clearSearchTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_baseline_close_24"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="124dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/background_blue"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracklistRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchHistoryViewGroup"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchHistoryTitle"
                style="@style/ErrorTextStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textFontWeight="500"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/search_history_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_history_recycler"
                android:layout_width="match_parent"
                android:layout_height="122dp" />

            <Button
                style="@style/SimpleButtonStyle"
                android:id="@+id/clearHistoryButton"
                android:text="@string/delete_history"
                android:padding="0dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/placeholder"
        android:layout_marginTop="86dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/placeholderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                style="@style/ErrorTextStyle"
                android:id="@+id/placeholderMessage"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <Button
                style="@style/SimpleButtonStyle"
                android:id="@+id/updateSearchButton"
                android:text="@string/update"
                android:padding="0dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>


